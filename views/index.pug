doctype html
html(lang="en")
    head
        meta(charset='utf-8')
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title= Welcome
        link(rel="stylesheet", href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
        <!-- jQuery library -->
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
        <!-- Latest compiled JavaScript -->
        script(src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
        script(src="js/script.js")
    body 
        div(align="center")
            h1 Course Planner
        br
        br
        div(class="container", align="center", id="mainDiv")
            button(type="button" class="btn btn-primary" data-toggle="modal" data-target="#loginModal", style="margin-right: 30px") Login
            button(type="button" class="btn btn-success" data-toggle="modal" data-target="#createAccountModal") Create Account

        <!-- Modal -->
        div(class="modal fade" id="loginModal" role="dialog")
            div(class="modal-dialog modal-lg")
                <!-- Modal content-->
                div(class="modal-content")
                    div(class="modal-header")
                        button(type="button" class="close" data-dismiss="modal") &times;
                        h4(class="modal-title") Login
                    div(class="modal-body")
                        form( class="form-inline" role="form")
                            div( class="form-group")
                                label(for="username") Username:
                                input(type="text", class="form-control", id="usernameLogin", style="margin-right: 10x")
                            div(class="form-group")
                                label(for="pwd") Password:
                                input(type="password", class="form-control", id="pwdLogin")
                            button(type="button", class="btn btn-default", id="loginButton") Submit
                        p(class="modal-login-error", type="text", id="errorMessageLogin") 
        <!-- Modal -->
        div(class="modal fade" id="createAccountModal" role="dialog")
            div(class="modal-dialog modal-lg")
                <!-- Modal content-->
                div(class="modal-content")
                    div(class="modal-header")
                        button(type="button" class="close" data-dismiss="modal") &times;
                        h4(class="modal-title") Create an Account
                    div(class="modal-body")
                        form( class="form-inline" role="form")
                            div( class="form-group")
                                label(for="username") Username:
                                input(type="text", class="form-control", id="usernameCreate", style="margin-right: 10x")
                            div( class="form-group")
                                label(for="nickname") Nickname:
                                input(type="text", class="form-control", id="nicknameCreate", style="margin-right: 10x")                                
                            div(class="form-group")
                                label(for="pwd") Password:
                                input(type="password", class="form-control", id="pwdCreate")
                            button(type="button", class="btn btn-default", id="createAccountButton") Create Account              
                        p(class="modal-create-account-error", type="text", id="errorMessageCreateAccount") 

      
        